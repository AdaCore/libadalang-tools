project pp_reproducer extends "config.gpr" is

   for Source_Dirs use config.Source_Dir_Lim;
   for Exec_Dir    use config.ExecPath;
   for Object_Dir  use "obj/" & config.AddPath;

   for Languages use ("Ada");
   for Main use ("main.2.ada");

   for Target use Config'Target;
   for Runtime use Config'Runtime;


   package Compiler is
      for Default_Switches ("Ada") use Config.Compiler_Switches & ();
   end Compiler;


   package Builder is
      for Default_Switches ("Ada") use Config.Builder_Switches & ();
   end Builder;


   package Linker is
      for Default_Switches ("Ada") use Config.Linker_Switches & ();
   end Linker;


   package Binder is
      for Default_Switches ("Ada") use Config.Binder_Switches & ();
   end Binder;


   package Check is
      for Default_Switches ("Ada") use ("-rules", "-from", Config.Coding_Standard_File);
   end Check;


   package Pretty_Printer is
      for Default_Switches ("Ada") use Config.Pretty_Printer_Switches & ();
   end Pretty_Printer;


   package Ide renames config.Ide;


   package GNATtest is
      for harness_dir use Config.Harness_directory;
      for tests_dir use Config.Test_directory;
   end GNATtest;

end pp_reproducer;
