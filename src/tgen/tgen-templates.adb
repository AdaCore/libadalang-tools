package body TGen.Templates is

   ---------------
   -- Translate --
   ---------------

   procedure Translate
     (Self  : Translator_Container;
      Table : in out Templates_Parser.Translate_Set) is
   begin
      Translate_Helper
        (Translator_Container'Class (Self), Table);

      if Self.Next /= null then

         Self.Next.Translate (Table);
      end if;
   end Translate;

end TGen.Templates;
